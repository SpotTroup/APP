{
  "private": true,
  "name": "spottroup",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.3",
    "eslint": "^7.16.0",
    "eslint-config-preact": "^1.1.3",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.5",
    "preact-material-components": "^1.6.1",
    "sirv-cli": "1.0.10"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "bootstrap": "^4.5.3",
    "google-maps-react": "^2.0.6",
    "preact": "^10.5.7",
    "preact-fluid": "^0.9.1",
    "preact-render-to-string": "^5.1.12",
    "preact-router": "^3.2.1",
    "react-geocode": "^0.2.2",
    "react-rating": "^2.0.5",
    "tiled-hexagons": "^1.0.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "moduleNameMapper": {
    "^react$": "preact/compat",
    "^react-dom/test-utils$": "preact/test-utils",
    "^react-dom$": "preact/compat"
  },
  "plugins": [
    [
      "@babel/plugin-transform-react-jsx",
      {
        "pragma": "h",
        "pragmaFrag": "Fragment"
      }
    ]
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "skipLibCheck": true
}
