{
  "private": true,
  "name": "spottroup",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "preact build --prerenderUrls ./prerender-urls.js",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --prerenderUrls ./prerender-urls.js --refresh",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^7.16.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-synacor": "^2.0.2",
    "esm": "^3.2.25",
    "glob": "^7.1.4",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "less": "^4.0.0",
    "less-loader": "^7.2.0",
    "markdown": "^0.5.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.5",
    "preact-cli-plugin-netlify": "^1.6.0",
    "react-live": "^2.2.3",
    "sirv-cli": "1.0.10",
    "webpack-bundle-analyzer": "^4.3.0"
  },
  "dependencies": {
    "@preact/prerender-data-provider": "^3.0.1",
    "@react-google-maps/api": "^2.0.2",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.3",
    "google-maps-react": "^2.0.6",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "markdown-to-jsx": "^6.10.3",
    "preact": "^10.5.7",
    "preact-render-spy": "^1.3.0",
    "preact-render-to-string": "^5.1.12",
    "preact-router": "^3.2.1",
    "react-geocode": "^0.2.2",
    "react-hexagon-grid": "^1.1.1",
    "tiled-hexagons": "^1.0.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
